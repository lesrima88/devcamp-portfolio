<h1>Portfolio Items</h1>


<%= link_to "Create New Item" , new_portfolio_path %>


<% @protfolio_items.each do |protfolio_items| %>
	<p><%= protfolio_items.title %></p>
	<p><%= protfolio_items.subtitle %></p>
	<p><%= protfolio_items.body %></p>
	<%= image_tag protfolio_items.thumb_image unless protfolio_items.thumb_image.nil? %>
	<%= link_to "Edit Item" , edit_portfolio_path(protfolio_items.id) %>

<% end %>